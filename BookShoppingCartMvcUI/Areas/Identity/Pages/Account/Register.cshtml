@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">@ViewData["Title"]</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb justify-content-center">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Register</li>
            </ol>
        </nav>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card border-0 shadow-sm overflow-hidden">
                <div class="row g-0">
                    <div class="col-md-6">
                        <div class="card-body p-4 p-lg-5">
                            <div class="text-center d-md-none mb-4">
                                <i class="bi bi-book-half fs-1 text-primary"></i>
                                <h3 class="fw-bold">MASA Books</h3>
                                <p class="text-muted">Create your account</p>
                            </div>

                            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                    <label asp-for="Input.Email">Email</label>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                                    <label asp-for="Input.Password">Password</label>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-4">
                                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>

                                <div class="d-grid mb-4">
                                    <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg">
                                        <i class="bi bi-person-plus me-2"></i>Register
                                    </button>
                                </div>

                                <div class="text-center">
                                    <p class="mb-0">Already have an account?</p>
                                    <a asp-page="./Login" class="fw-bold text-decoration-none">Log in</a>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="col-md-6 d-none d-md-block">
                        <div class="register-image-container">
                            <div class="register-image"></div>
                            <div class="register-overlay">
                                <div class="register-overlay-content">
                                    <h2 class="text-white mb-3">Join Our Community</h2>
                                    <p class="text-white-50 mb-4">Create an account to enjoy exclusive benefits, personalized recommendations, and special offers.</p>

                                    <div class="benefits-list">
                                        <div class="benefit-item">
                                            <div class="benefit-icon">
                                                <i class="bi bi-truck"></i>
                                            </div>
                                            <div class="benefit-text">
                                                <h6 class="text-white mb-1">Fast Delivery</h6>
                                                <p class="text-white-50 mb-0 small">Get your books delivered quickly</p>
                                            </div>
                                        </div>

                                        <div class="benefit-item">
                                            <div class="benefit-icon">
                                                <i class="bi bi-bookmark-heart"></i>
                                            </div>
                                            <div class="benefit-text">
                                                <h6 class="text-white mb-1">Personalized Recommendations</h6>
                                                <p class="text-white-50 mb-0 small">Discover books tailored to your interests</p>
                                            </div>
                                        </div>

                                        <div class="benefit-item">
                                            <div class="benefit-icon">
                                                <i class="bi bi-gift"></i>
                                            </div>
                                            <div class="benefit-text">
                                                <h6 class="text-white mb-1">Exclusive Offers</h6>
                                                <p class="text-white-50 mb-0 small">Access to special discounts and promotions</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .register-image-container {
        position: relative;
        height: 100%;
        min-height: 500px;
    }

    .register-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('/images/register-books.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

        .register-image::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(58, 90, 120, 0.85);
        }

    .register-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
    }

    .register-overlay-content {
        max-width: 400px;
    }

    .benefits-list {
        margin-top: 2rem;
    }

    .benefit-item {
        display: flex;
        align-items: flex-start;
        margin-bottom: 1.5rem;
    }

    .benefit-icon {
        width: 40px;
        height: 40px;
        background-color: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 1rem;
        flex-shrink: 0;
    }

        .benefit-icon i {
            color: white;
            font-size: 1.2rem;
        }

    /* Form styling */
    .form-control, .form-select {
        padding: 0.75rem 1rem;
        border-radius: 0.375rem;
    }

        .form-control:focus, .form-select:focus {
            border-color: #3a5a78;
            box-shadow: 0 0 0 0.25rem rgba(58, 90, 120, 0.25);
        }

    /* Card styling */
    .card {
        border-radius: 0.5rem;
        overflow: hidden;
    }

    /* Button styling */
    .btn-primary {
        background-color: #3a5a78;
        border-color: #3a5a78;
    }

        .btn-primary:hover {
            background-color: #2c4660;
            border-color: #2c4660;
        }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
