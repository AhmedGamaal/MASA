@model BookDTO
@{
    Layout = "_AdminLayout";
}
<div style="width:50%">
    <h2 class="text-primary fw-bold mb-3"> Update Book </h2>
    <a asp-action="Index" asp-controller="Book" class="btn btn-primary mb-3">Back</a>
    <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
            <form asp-action="UpdateBook" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Image" />

                <div class="my-2">
                    <label class="form-label">Book*</label>
                    <input type="text" class="form-control" asp-for="BookName" />
                    <span asp-validation-for="BookName" class="text-danger"></span>
                </div>

                <div class="my-2">
                    <label class="form-label">Author*</label>
                    <input type="text" class="form-control" asp-for="AuthorName" />
                    <span asp-validation-for="AuthorName" class="text-danger"></span>
                </div>

                <div class="my-2">
                    <label class="form-label">Genre*</label>
                    <select class="form-control form-select" asp-for="GenreId" asp-items="Model.GenreList">
                        <option value="">Select Genre</option>
                    </select>
                    <span asp-validation-for="GenreId" class="text-danger"></span>
                </div>

                <div class="my-2">
                    <label class="form-label">Price*</label>
                    <input type="number" class="form-control" asp-for="Price" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="my-2">
                    <label class="form-label">Image</label>
                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                        <div class="mb-2">
                            <img src="/images/@Model.Image" style="width:100px;height:80px" class="img-thumbnail" />
                        </div>
                    }
                    <input type="file" class="form-control" asp-for="ImageFile" />
                </div>

                <div class="my-3">
                    <button type="submit" class="btn btn-info">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .form-control, .form-select {
        padding: 0.5rem;
        border-radius: 0.25rem;
        border: 1px solid #ced4da;
    }

        .form-control:focus, .form-select:focus {
            border-color: #3a5a78;
            box-shadow: 0 0 0 0.25rem rgba(58, 90, 120, 0.25);
        }

    .form-label {
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .img-thumbnail {
        padding: 0.25rem;
        background-color: #fff;
        border: 1px solid #dee2e6;
        border-radius: 0.25rem;
        object-fit: contain;
    }

    .btn-primary {
        background-color: #3a5a78;
        border-color: #3a5a78;
    }

        .btn-primary:hover {
            background-color: #2c4660;
            border-color: #2c4660;
        }

    .btn-info {
        background-color: #0dcaf0;
        border-color: #0dcaf0;
        color: #fff;
    }

        .btn-info:hover {
            background-color: #0bacda;
            border-color: #0bacda;
            color: #fff;
        }
</style>
