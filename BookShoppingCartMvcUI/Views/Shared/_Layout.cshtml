<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MASA</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        :root {
            --primary-color: #3a5a78;
            --primary-dark: #2c4660;
            --accent-color: #e67e22;
            --light-bg: #f8f9fa;
            --dark-text: #2c3e50;
            --light-text: #ecf0f1;
        }

        body {
            font-family: 'Poppins', sans-serif;
            color: var(--dark-text);
        }

        /* Navbar Styling */
        .navbar {
            padding: 0.8rem 0;
            transition: all 0.3s ease;
            background-color: white !important;
        }

        .navbar-sticky {
            box-shadow: 0 3px 10px rgba(0,0,0,0.1);
        }

        .navbar-brand {
            font-weight: 800;
            font-size: 2rem;
            color: var(--primary-color);
            letter-spacing: -0.5px;
            display: flex;
            align-items: center;
        }

        .navbar-brand-container {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .arabic-slogan {
            font-family: 'Amiri', serif;
            font-size: 1.2rem;
            color: var(--accent-color);
            margin-left: 0.5rem;
            padding-left: 0.5rem;
            border-left: 2px solid #eaeaea;
        }

        .nav-item {
            position: relative;
            margin: 0 0.2rem;
        }

        .nav-link {
            color: var(--dark-text) !important;
            font-weight: 500;
            padding: 0.5rem 1rem !important;
            transition: all 0.3s ease;
            border-radius: 4px;
        }

            .nav-link:hover {
                color: var(--primary-color) !important;
                background-color: rgba(58, 90, 120, 0.05);
            }

            .nav-link.active {
                color: var(--primary-color) !important;
                font-weight: 600;
            }

                .nav-link.active::after {
                    content: '';
                    position: absolute;
                    bottom: 0;
                    left: 50%;
                    transform: translateX(-50%);
                    width: 30px;
                    height: 3px;
                    background-color: var(--primary-color);
                    border-radius: 3px;
                }

        .cart-icon {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: rgba(58, 90, 120, 0.1);
            transition: all 0.3s ease;
        }

            .cart-icon:hover {
                background-color: rgba(58, 90, 120, 0.2);
            }

        .cart-badge {
            position: absolute;
            top: -5px;
            right: -5px;
            font-size: 0.7rem;
            padding: 0.25rem 0.45rem;
        }

        /* Mobile navbar */
        media (max-width: 991.98px) {
            .navbar-collapse

        {
            background-color: white;
            padding: 1rem;
            border-radius: 8px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            margin-top: 0.5rem;
        }

        .navbar-brand-container {
            margin-bottom: 0.5rem;
        }

        .arabic-slogan {
            border-left: none;
            margin-left: 0;
            padding-left: 0;
            font-size: 1rem;
        }

        .nav-link.active::after {
            display: none;
        }

        .nav-link.active {
            background-color: rgba(58, 90, 120, 0.1);
        }

        }

        /* Other existing styles */
        .product-card {
            transition: transform 0.3s;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

            .product-card:hover {
                transform: translateY(-5px);
            }

        .product-img {
            height: 250px;
            object-fit: cover;
        }

        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

            .btn-primary:hover {
                background-color: var(--primary-dark);
                border-color: var(--primary-dark);
            }

        .footer {
            background-color: var(--light-bg);
            padding: 2rem 0;
        }
    </style>
    <link href="https://fonts.googleapis.com/css2?family=Amiri:wght@400;700&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light navbar-sticky">
            <div class="container">
                <div class="navbar-brand-container">
                    <a class="navbar-brand" href="/">
                        <i class="bi bi-book me-2 text-primary"></i>MASA
                    </a>
                    <div class="arabic-slogan">ثقافتك تبدأ هنا</div>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-center">
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Contact">Contact Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/About">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Privacy">Privacy</a>

                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Terms">Terms</a>
                        </li>
                        @if (User.IsInRole(Roles.Admin.ToString()))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/AdminOperations/Dashboard">Dashboard</a>
                            </li>
                            @*  <li class="nav-item">
                          <a class="nav-link" 
                          href="/AdminOperations/AllOrders">Orders</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/Stock/Index">Stock</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/Genre/Index">Genre</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/Book/Index">Books</a>
                        </li> *@
                        }
                        <li class="nav-item">
                            <a class="nav-link position-relative" href="/Cart/GetUserCart">
                                <i class="bi bi-cart3 fs-5"></i>
                                <span id="cartCount" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-primary">
                                    0
                                </span>
                            </a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-5 border-top">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4 mb-md-0">
                    <h5>MASA</h5>
                    <p class="arabic-slogan">ثقافتك تبدأ هنا</p>
                    <p>One Book Can Change Everything!</p>
                </div>
               
                <div class="col-md-2 mb-4 mb-md-0">
                    <h5>Company</h5>
                    <ul class="list-unstyled">
                        <li><a href="/Home/About" class="text-decoration-none text-dark">About Us</a></li>
                        <li><a href="/Home/Contact" class="text-decoration-none text-dark">Contact</a></li>
                        <li><a href="/Home/Privacy" class="text-decoration-none text-dark">Privacy</a></li>
                        <li><a href="/Home/Terms" class="text-decoration-none text-dark">Terms</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5>Stay Connected</h5>
                    <div class="d-flex gap-3 fs-4">
                        <a href="https://www.facebook.com/" class="text-dark"><i class="bi bi-facebook"></i></a>
                        <a href="https://www.instagram.com/" class="text-dark"><i class="bi bi-instagram"></i></a>
                        <a href="https://x.com/" class="text-dark"><i class="bi bi-twitter-x"></i></a>
                        <a href="https://www.pinterest.com/" class="text-dark"><i class="bi bi-pinterest"></i></a>
                    </div>
                    <div class="mt-3">
                        <h6>Subscribe to our newsletter</h6>
                        <div class="input-group">
                            <input type="email" class="form-control" placeholder="Your email">
                            <button class="btn btn-dark" type="button">Subscribe</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="border-top pt-3 mt-4 text-center">
                <p>&copy; @DateTime.Now.Year - MASA - All rights reserved</p>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
