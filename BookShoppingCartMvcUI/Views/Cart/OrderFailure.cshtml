@{
    ViewData["Title"] = "Order Failed";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm text-center p-4 p-md-5">
                <div class="order-failure-icon mb-4">
                    <i class="bi bi-exclamation-circle-fill"></i>
                </div>

                <h1 class="display-5 fw-bold text-danger mb-3">Order Failed</h1>
                <p class="lead mb-4">We're sorry, but there was an issue processing your order. Your payment has not been charged.</p>

                <div class="order-issue p-4 mb-4">
                    <h5 class="fw-bold mb-3">Possible Issues</h5>
                    <ul class="list-unstyled text-start">
                        <li class="mb-2">
                            <i class="bi bi-credit-card text-danger me-2"></i>
                            Payment information may be incorrect or expired
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-wifi-off text-danger me-2"></i>
                            Connection issues during the payment process
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-bank text-danger me-2"></i>
                            Your bank may have declined the transaction
                        </li>
                        <li>
                            <i class="bi bi-exclamation-triangle text-danger me-2"></i>
                            Technical issues on our end
                        </li>
                    </ul>
                </div>

                <div class="order-next-steps mb-4">
                    <h5 class="fw-bold mb-3">What to Do Next</h5>
                    <div class="row g-3">
                        <div class="col-md-4">
                            <div class="next-step-item">
                                <div class="next-step-icon failure">
                                    <i class="bi bi-arrow-repeat"></i>
                                </div>
                                <h6>Try Again</h6>
                                <p class="small text-muted mb-0">Return to your cart and try the checkout process again.</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="next-step-item">
                                <div class="next-step-icon failure">
                                    <i class="bi bi-credit-card"></i>
                                </div>
                                <h6>Check Payment</h6>
                                <p class="small text-muted mb-0">Verify your payment information is correct and up-to-date.</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="next-step-item">
                                <div class="next-step-icon failure">
                                    <i class="bi bi-headset"></i>
                                </div>
                                <h6>Contact Support</h6>
                                <p class="small text-muted mb-0">Our team is ready to help resolve any issues.</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex flex-column flex-md-row justify-content-center gap-3">
                    <a href="@Url.Action("GetUserCart", "Cart")" class="btn btn-primary">
                        <i class="bi bi-cart me-2"></i>Return to Cart
                    </a>
                    <a href="@Url.Action("Contact", "Home")" class="btn btn-outline-primary">
                        <i class="bi bi-chat-dots me-2"></i>Contact Support
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .order-failure-icon {
        width: 100px;
        height: 100px;
        background-color: rgba(220, 53, 69, 0.1);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
    }

        .order-failure-icon i {
            font-size: 50px;
            color: #dc3545;
        }

    .order-issue {
        background-color: #f8f9fa;
        border-radius: 0.5rem;
    }

    .next-step-item {
        padding: 1.5rem;
        background-color: #fff;
        border-radius: 0.5rem;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        height: 100%;
    }

    .next-step-icon {
        width: 50px;
        height: 50px;
        background-color: rgba(58, 90, 120, 0.1);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1rem;
    }

        .next-step-icon.failure {
            background-color: rgba(220, 53, 69, 0.1);
        }

        .next-step-icon i {
            font-size: 1.5rem;
            color: #3a5a78;
        }

        .next-step-icon.failure i {
            color: #dc3545;
        }

    /* Button styling */
    .btn-primary {
        background-color: #3a5a78;
        border-color: #3a5a78;
    }

        .btn-primary:hover {
            background-color: #2c4660;
            border-color: #2c4660;
        }

    .btn-outline-primary {
        color: #3a5a78;
        border-color: #3a5a78;
    }

        .btn-outline-primary:hover {
            background-color: #3a5a78;
            border-color: #3a5a78;
        }
</style>
